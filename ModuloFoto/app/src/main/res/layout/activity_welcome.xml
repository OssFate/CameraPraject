<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_welcome"
    android:keepScreenOn="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.freakground.oswald.modulofoto.WelcomeActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/fondo"
        android:id="@+id/f1Fondo"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/f1reconocimiento"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/f1Reconocimiento" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/f1toca"
        android:id="@+id/f1Tocar" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/f1sombra"
        android:id="@+id/f1Sombra" />

    <ImageView
        app:srcCompat="@drawable/f1frame"
        android:id="@+id/f1Frame"
        android:layout_marginStart="32dp"
        android:layout_marginTop="44dp"
        android:layout_width="@dimen/frameW"
        android:layout_height="@dimen/frameH"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:visibility="invisible" />

    <ViewSwitcher
        android:id="@+id/switcher"
        android:layout_width="@dimen/frameW"
        android:layout_height="@dimen/frameH"
        android:layout_centerHorizontal="false"
        android:inAnimation="@anim/fade_in"
        android:outAnimation="@anim/fade_out"
        android:layout_marginStart="32dp"
        android:layout_marginTop="44dp"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/firstImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter" />

        <ImageView
            android:id="@+id/secondImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter" />
    </ViewSwitcher>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/f1comparte"
        android:id="@+id/f1Comparte"
        android:onClick="changeActivity" />

</RelativeLayout>
