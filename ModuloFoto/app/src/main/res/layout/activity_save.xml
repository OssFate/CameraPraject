<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_save"
    android:keepScreenOn="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.freakground.oswald.modulofoto.SaveActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/fondo"
        android:id="@+id/sFondo"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/save_icon"
        android:id="@+id/sIcon"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="352dp"
        android:layout_marginEnd="230dp"
        android:onClick="saveFile" />

    <ImageView
        app:srcCompat="@drawable/save_name"
        android:id="@+id/sRecon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="115dp"
        android:layout_alignParentBottom="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/save_sombra"
        android:id="@+id/sSombra"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"/>

    <ImageView
        android:id="@+id/sPicture"
        android:layout_marginEnd="20dp"
        android:layout_alignBottom="@+id/sSombra"
        android:layout_alignEnd="@+id/sSombra"
        android:layout_width="238dp"
        android:layout_height="284dp"
        android:layout_marginBottom="20dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/save_button"
        android:id="@+id/sButton"
        android:layout_marginTop="455dp"
        android:layout_marginEnd="210dp"
        android:layout_alignParentEnd="true"
        android:onClick="saveFile"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/save_no"
        android:id="@+id/sButtonNo"
        android:layout_marginTop="352dp"
        android:layout_marginEnd="40dp"
        android:layout_alignParentEnd="true"
        android:onClick="deleteFile"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textNoSuggestions|textVisiblePassword"
        android:maxLength="20"
        android:ems="10"
        android:id="@+id/editText"
        android:textAlignment="center"
        android:layout_marginStart="10dp"
        android:layout_alignBottom="@+id/sPicture"
        android:layout_alignStart="@+id/sPicture" />

</RelativeLayout>
